# Asset Monitor Configuration Example
# Copy this file to .env and fill in your values

# Database
DATABASE_URL=sqlite:///./assetmon.db

# Shodan API (required for port scanning and vulnerability detection)
SHODAN_API_KEY=your_shodan_api_key_here

# Notification Channels (optional)
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL=
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Scan Configuration
SCAN_THREADS=50
DNS_RATE_LIMIT=100
HTTP_TIMEOUT=10
HTTP_THREADS=50

# Tool Paths (optional, leave empty to use PATH)
SUBFINDER_PATH=subfinder
ASSETFINDER_PATH=assetfinder
DNSX_PATH=dnsx
HTTPX_PATH=httpx
GAU_PATH=gau
KATANA_PATH=katana
WAYBACKURLS_PATH=waybackurls
AMASS_PATH=amass
NUCLEI_PATH=nuclei
NUCLEI_TEMPLATES_PATH=

# Subdomain Takeover Detection
# CNAME patterns that indicate potential takeover
TAKEOVER_PATTERNS_CNAME=vercel.app,netlify.app,github.io,herokuapp.com,s3.amazonaws.com,azurewebsites.net,cloudfront.net

# Takeover fingerprints in HTTP responses
TAKEOVER_FINGERPRINTS=There isn't a GitHub Pages site here,No such app,The specified bucket does not exist,404: Not Found

# Timeouts (seconds)
TOOL_TIMEOUT=300
SCAN_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=assetmon.log
